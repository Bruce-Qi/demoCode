<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="wwtao.demo.demo_activityrouter.MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/mainActivityEt"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="activity地址:"
        />
        <EditText
                android:id="@+id/mainActivityEtRequestCode"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ForActivityCode"
                android:inputType="number"
                android:text="101"
        />
    </LinearLayout>

    <Button
            android:id="@+id/btnMainActivityGotoCustomActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
    />

    <Button
            android:id="@+id/btnMainActivityGotoCustomActivityForResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />

    <Button
            android:id="@+id/btnMainActivityGotoBaiDu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="跳转百度网页"
    />
    <Button
            android:id="@+id/btnMainActivityGotoHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="跳转Home"
    />
    <Button
            android:id="@+id/btnMainActivityGotoGoodsDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="跳转商品详情"
    />

    <Button
            android:id="@+id/btnMainActivityGotoLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="去登录"
    />


</LinearLayout>
