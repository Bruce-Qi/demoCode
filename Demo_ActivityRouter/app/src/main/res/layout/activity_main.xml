<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="wwtao.demo.demo_activityrouter.MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/mainActivityEt"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="目标地址"
        />
        <EditText
                android:id="@+id/mainActivityEtRequestCode"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ForActivityCode"
                android:inputType="number"
                android:text="101"
        />
    </LinearLayout>

    <Button
            android:id="@+id/mainActivityBtnGotoCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
    />

    <Button
            android:id="@+id/mainActivityBtnGotoCustomForResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />

    <Button
            android:id="@+id/mainActivityBtnGotoBaiDu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="跳转百度网页"
    />
    <Button
            android:id="@+id/mainActivityBtnGonfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="跳转代码配置界面"
    />
    <Button
            android:id="@+id/mainActivityBtnGotoOriginImplicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="原生跳转intent-filter"
    />

    <Button
            android:id="@+id/mainActivityBtnGotoImplicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="带参数跳转intent-filter"
    />


</LinearLayout>
